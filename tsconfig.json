{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"incremental": false,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,

		/* Alias */
		"baseUrl": "src",
		"paths": {
			"components/*": ["components/*"],
			"hooks/*": ["hooks/*"],
			"types/*": ["types/*"],
			"schemas/*": ["schemas/*"],
			"styles/*": ["styles/*"],
			"utils/*": ["utils/*"],
			"views/*": ["views/*"]
		}
	},
	"include": ["src", "templates", "vite.config.ts"]
}
